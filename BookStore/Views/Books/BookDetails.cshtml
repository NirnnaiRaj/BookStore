@model BookStore.Business.ViewModels.BooksModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a shared layout for your e-commerce site
    ViewBag.Title = "Book Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <h5 class="text-muted">Author: @Model.Author</h5>
            <p>Description: @Model.Description</p>
            <p>Price: @Model.Price</p>
            <p>Stock: @(Model.Status ? "Available" : "Not Available")</p>
            <div class="btn-group" role="group">
                <button class="btn btn-primary" onclick="book.addToCart('@Model.Id', '@Model.Status')">
                    <img src="~/images/cart.png" alt="Cart" style="height: 20px; margin-right: 5px;" />
                    Add to Cart
                </button>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <img src="@Model.Image" class="img-medium" alt="Book Image" />
        </div>
    </div>
</div>

<style>
    .img-medium {
        width: 300px; /* Set the width to medium size */
        height: auto; /* Automatically calculate the height based on the width to maintain aspect ratio */
    }
</style>
<script src="~/js/Book.js"></script>